{
  "preset": "ts-jest",
  "testEnvironment": "jsdom",
  "rootDir": "../../",
  "globals": {
    "__DEV__": true
  },
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "target": "ES2015"
      }
    ]
  },
  "testMatch": ["**/?(*.)+(es2015).[jt]s?(x)"],
  "testPathIgnorePatterns": [
    "examples",
    "packages/reactant-cli/templates",
    "packages/reactant-template/templates"
  ]
}
